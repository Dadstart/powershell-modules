# .editorconfig
root = true

[*.ps1]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.psm1]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.psd1]
indent_style = space
indent_size = 4

# Optional rules for formatting consistency
max_line_length = 120